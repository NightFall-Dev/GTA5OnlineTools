<Window
    x:Class="GTA5OnlineTools.Modules.Windows.GTAHaxWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:emoji="clr-namespace:Emoji.Wpf;assembly=Emoji.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="Window_GTAHax"
    Title="GTAHax代码导入编辑器"
    Closing="Window_GTAHax_Closing"
    Loaded="Window_GTAHax_Loaded"
    Style="{StaticResource WindowStyle_Normal}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Margin="8,8,3,8">
                <Border Style="{StaticResource BorderStyle_DropShadowEffect}" />
                <DockPanel LastChildFill="True">
                    <StackPanel
                        Margin="10,10,0,0"
                        DockPanel.Dock="Top"
                        Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            Style="{StaticResource TextBlockStyle_IconFontInfo}"
                            Text="&#xe624;" />
                        <TextBlock
                            FontSize="18"
                            FontWeight="Bold"
                            Text="代码导入预览" />
                    </StackPanel>
                    <TextBox
                        x:Name="TextBox_GTAHaxCodePreview"
                        Margin="5"
                        BorderBrush="Gray"
                        BorderThickness="0"
                        Style="{StaticResource TextBoxStyle_Normal}">
                        <TextBox.ToolTip>
                            <TextBlock Text="把需要导入GTAHax的代码粘贴到这里" />
                        </TextBox.ToolTip>
                    </TextBox>
                </DockPanel>
            </Grid>

            <TabControl
                Name="TabControl_Main"
                Grid.Column="1"
                Margin="5"
                Background="White"
                SelectionChanged="TabControl_Main_SelectionChanged"
                Style="{StaticResource TabControlStyle_Main}">
                <TabControl.Resources>
                    <Style BasedOn="{StaticResource TabItemStyle_Main}" TargetType="{x:Type TabItem}" />
                </TabControl.Resources>
                <TabItem Header="预设代码">
                    <ListBox
                        x:Name="ListBox_GTAHaxCode_ClassList"
                        Margin="3,6,3,3"
                        SelectionChanged="ListBox_GTAHaxCode_ClassList_SelectionChanged"
                        Style="{StaticResource ListBoxStyle_Normal}" />
                </TabItem>

                <TabItem Header="名钻假日">
                    <UniformGrid Columns="2">
                        <Grid Margin="3,6,5,3">
                            <GroupBox Style="{StaticResource GroupBoxWebStyle}">
                                <GroupBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <emoji:TextBlock
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="🍎" />
                                        <RadioButton
                                            x:Name="RadioButton_H3_P1"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Click="RadioButton_H3_P1_Click"
                                            Content="第一块面板"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            IsChecked="True" />
                                    </StackPanel>

                                </GroupBox.Header>

                                <ScrollViewer Style="{StaticResource ScrollViewerStyle_VAHD}">
                                    <StackPanel Margin="3" Orientation="Vertical">
                                        <CheckBox
                                            x:Name="CheckBox_H3OPT_BITSET1"
                                            Margin="5"
                                            Content="重置第一块面板"
                                            Foreground="Red" />
                                        <Expander
                                            Margin="5"
                                            Header="抢劫方式"
                                            IsExpanded="False">
                                            <ListBox
                                                x:Name="ListBox_H3OPT_APPROACH"
                                                Margin="5"
                                                SelectedIndex="0"
                                                Style="{StaticResource ListBoxStyle_Normal}">
                                                <ListBoxItem Content="不选择抢劫方式" Foreground="#FF6666" />
                                                <ListBoxItem Content="隐迹潜踪" />
                                                <ListBoxItem Content="兵不厌诈" />
                                                <ListBoxItem Content="气势汹汹" />
                                            </ListBox>
                                        </Expander>
                                        <Expander
                                            Margin="5"
                                            Header="抢劫物品"
                                            IsExpanded="False">
                                            <ListBox
                                                x:Name="ListBoxItem_H3OPT_TARGET"
                                                Margin="5"
                                                SelectedIndex="0"
                                                Style="{StaticResource ListBoxStyle_Normal}">
                                                <ListBoxItem Content="不选择抢劫物品" Foreground="#FF6666" />
                                                <ListBoxItem Content="现金" />
                                                <ListBoxItem Content="黄金" />
                                                <ListBoxItem Content="艺术品" />
                                                <ListBoxItem Content="钻石" />
                                            </ListBox>
                                        </Expander>
                                        <CheckBox
                                            x:Name="CheckBox_H3OPT_ACCESSPOINTS"
                                            Margin="5"
                                            Content="解锁所有侦察点" />
                                        <CheckBox
                                            x:Name="CheckBox_H3OPT_POI"
                                            Margin="5"
                                            Content="解锁所有兴趣点" />
                                        <CheckBox
                                            x:Name="CheckBox_H3OPT_BITSET1_1"
                                            Margin="5"
                                            Content="提交修改到第一块面板" />
                                        <TextBlock Margin="5,0,5,0" />
                                        <TextBlock Margin="5" VerticalAlignment="Center">
                                            <Hyperlink>必看提示1</Hyperlink>
                                            <TextBlock.ToolTip>
                                                <TextBlock>
                                                    导入时需要在游戏厅地下室按E键选择对应面板，导入成功后会黑屏一下
                                                </TextBlock>
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                        <TextBlock Margin="5" VerticalAlignment="Center">
                                            <Hyperlink>必看提示2</Hyperlink>
                                            <TextBlock.ToolTip>
                                                <TextBlock>
                                                    如果你是第一次玩这个任务，建议手动做几个前置后再跳过，否则可能出现未知的问题
                                                </TextBlock>
                                            </TextBlock.ToolTip>
                                        </TextBlock>
                                        <TextBlock Margin="5,0,5,0" />
                                        <Expander Header="高级" IsExpanded="True">
                                            <Grid Margin="5">
                                                <Border Style="{StaticResource BorderStyle_DropShadowEffect}" />
                                                <StackPanel Margin="5">
                                                    <CheckBox
                                                        x:Name="CheckBox_H3_COMPLETEDPOSIX"
                                                        Margin="5"
                                                        Content="重置赌场抢劫冷却时间" />
                                                    <CheckBox
                                                        x:Name="CheckBox_Reset_P1P2"
                                                        Margin="5"
                                                        Content="重置赌场抢劫第一第二块面板" />
                                                </StackPanel>

                                            </Grid>
                                        </Expander>
                                    </StackPanel>
                                </ScrollViewer>
                            </GroupBox>
                        </Grid>

                        <Grid Margin="3,6,5,3">
                            <GroupBox Style="{StaticResource GroupBoxWebStyle}">
                                <GroupBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <emoji:TextBlock
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="🍊" />
                                        <RadioButton
                                            x:Name="RadioButton_H3_P2"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Click="RadioButton_H3_P2_Click"
                                            Content="第二块面板"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Foreground="White" />
                                    </StackPanel>
                                </GroupBox.Header>

                                <ScrollViewer Style="{StaticResource ScrollViewerStyle_VAHD}">
                                    <StackPanel Margin="3" Orientation="Vertical">
                                        <CheckBox
                                            x:Name="CheckBox_H3OPT_BITSET0"
                                            Margin="5"
                                            Content="重置第二块面板"
                                            Foreground="Red" />
                                        <Expander
                                            Margin="5"
                                            Header="逃亡载具"
                                            IsExpanded="False">
                                            <ListBox
                                                x:Name="ListBoxItem_H3OPT_VEH"
                                                Margin="5"
                                                SelectedIndex="0"
                                                Style="{StaticResource ListBoxStyle_Normal}">
                                                <ListBoxItem Content="不选择逃亡载具" Foreground="#FF6666" />
                                                <ListBoxItem Content="载具类型一" />
                                                <ListBoxItem Content="载具类型二" />
                                                <ListBoxItem Content="载具类型三" />
                                                <ListBoxItem Content="载具类型四" />
                                            </ListBox>
                                        </Expander>
                                        <Expander
                                            Margin="5"
                                            Header="武器类型"
                                            IsExpanded="False">
                                            <ListBox
                                                x:Name="ListBoxItem_H3OPT_WEAPS"
                                                Margin="5"
                                                SelectedIndex="0"
                                                Style="{StaticResource ListBoxStyle_Normal}">
                                                <ListBoxItem Content="不选择武器类型" Foreground="#FF6666" />
                                                <ListBoxItem Content="武器类型一" />
                                                <ListBoxItem Content="武器类型二" />
                                                <ListBoxItem Content="武器类型三" />
                                                <ListBoxItem Content="武器类型四" />
                                                <ListBoxItem Content="武器类型五" />
                                            </ListBox>
                                        </Expander>
                                        <CheckBox
                                            x:Name="CheckBox_H3OPT_DISRUPTSHIP"
                                            Margin="5"
                                            Content="撤走重型武装警卫" />
                                        <CheckBox
                                            x:Name="CheckBox_H3OPT_KEYLEVELS"
                                            Margin="5"
                                            Content="获得二级门禁卡" />
                                        <Expander
                                            Margin="5"
                                            Header="枪手等级"
                                            IsExpanded="False">
                                            <ListBox
                                                x:Name="ListBoxItem_H3OPT_CREWWEAP"
                                                Margin="5"
                                                SelectedIndex="0"
                                                Style="{StaticResource ListBoxStyle_Normal}">
                                                <ListBoxItem Content="不选择枪手" Foreground="#FF6666" />
                                                <ListBoxItem Content="卡尔·阿不拉季（5％分红）" />
                                                <ListBoxItem Content="古斯塔沃·莫塔（9％分红）" />
                                                <ListBoxItem Content="查理·里德（7％分红）" />
                                                <ListBoxItem Content="切斯特·麦考伊（10％分红）" />
                                                <ListBoxItem Content="帕里克·麦克瑞利（8％分红）" />
                                                <ListBoxItem Content="枪手零分红" />
                                            </ListBox>
                                        </Expander>
                                        <Expander
                                            Margin="5"
                                            Header="车手等级"
                                            IsExpanded="False">
                                            <ListBox
                                                x:Name="ListBoxItem_H3OPT_CREWDRIVER"
                                                Margin="5"
                                                SelectedIndex="0"
                                                Style="{StaticResource ListBoxStyle_Normal}">
                                                <ListBoxItem Content="不选择车手" Foreground="#FF6666" />
                                                <ListBoxItem Content="卡里姆·登茨（5％分红）" />
                                                <ListBoxItem Content="塔丽娜·马丁内斯（7％分红）" />
                                                <ListBoxItem Content="淘艾迪（9％分红）" />
                                                <ListBoxItem Content="扎克·尼尔森（6％分红）" />
                                                <ListBoxItem Content="切斯特·麦考伊（10％分红）" />
                                                <ListBoxItem Content="车手零分红" />
                                            </ListBox>
                                        </Expander>
                                        <Expander
                                            Margin="5"
                                            Header="黑客等级"
                                            IsExpanded="False">
                                            <ListBox
                                                x:Name="ListBoxItem_H3OPT_CREWHACKER"
                                                Margin="5"
                                                SelectedIndex="0"
                                                Style="{StaticResource ListBoxStyle_Normal}">
                                                <ListBoxItem Content="不选择黑客" Foreground="#FF6666" />
                                                <ListBoxItem Content="里奇·卢肯斯（3％分红）" />
                                                <ListBoxItem Content="克里斯汀·费尔兹（7％分红）" />
                                                <ListBoxItem Content="尤汗·布莱尔（5％分红）" />
                                                <ListBoxItem Content="阿维·施瓦茨曼（10％分红）" />
                                                <ListBoxItem Content="佩奇·哈里斯（9％分红）" />
                                                <ListBoxItem Content="黑客零分红" />
                                            </ListBox>
                                        </Expander>
                                        <CheckBox
                                            x:Name="CheckBox_H3OPT_BITSET0_0"
                                            Margin="5"
                                            Content="提交修改到第二块面板" />
                                    </StackPanel>
                                </ScrollViewer>
                            </GroupBox>
                        </Grid>
                    </UniformGrid>
                </TabItem>

                <TabItem Header="佩里科岛">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid Margin="3,6,5,3">
                            <GroupBox Style="{StaticResource GroupBoxWebStyle}">
                                <GroupBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <emoji:TextBlock
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="🍎" />
                                        <RadioButton
                                            x:Name="RadioButton_H4CNF_P1"
                                            VerticalAlignment="Center"
                                            VerticalContentAlignment="Center"
                                            Click="CheckBox_H4CNF_P1_Click"
                                            Content="前置任务"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            IsChecked="True" />
                                    </StackPanel>
                                </GroupBox.Header>

                                <ScrollViewer Style="{StaticResource ScrollViewerStyle_VAHD}">
                                    <StackPanel Margin="3" Orientation="Vertical">
                                        <CheckBox
                                            x:Name="CheckBox_H4CNF_BS_GEN"
                                            Margin="5"
                                            Content="解锁所有兴趣点" />
                                        <CheckBox
                                            x:Name="CheckBox_H4CNF_BS_ENTR"
                                            Margin="5"
                                            Content="解锁所有入侵点" />
                                        <CheckBox
                                            x:Name="CheckBox_H4CNF_BS_ABIL"
                                            Margin="5"
                                            Content="解锁团队支持" />
                                        <CheckBox
                                            x:Name="CheckBox_H4CNF_APPROACH"
                                            Margin="5"
                                            Content="解锁所有逃离点" />

                                        <Expander
                                            Margin="5"
                                            Header="任务难度"
                                            IsExpanded="False">
                                            <ListBox
                                                x:Name="ListBoxItem_H4_PROGRESS"
                                                Margin="5"
                                                SelectedIndex="0"
                                                Style="{StaticResource ListBoxStyle_Normal}">
                                                <ListBoxItem Content="未选择" Foreground="#FF6666" />
                                                <ListBoxItem Content="普通模式" />
                                                <ListBoxItem Content="困难模式" />
                                            </ListBox>
                                        </Expander>

                                        <Expander Margin="5" IsExpanded="False">
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="主要目标 " />
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Style="{StaticResource TextBlockStyle_IconFontBase}"
                                                        Text="&#xe7f2;">
                                                        <TextBlock.ToolTip>
                                                            <StackPanel Orientation="Vertical">
                                                                <TextBlock Margin="5" Text="猎豹雕像正常出现的概率比较低，建议选择粉钻或者其他" />
                                                                <Image Source="/Assets/Images/Tips/PericoHeist01.png" />
                                                            </StackPanel>
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Expander.Header>

                                            <ListBox
                                                x:Name="ListBoxItem_H4CNF_TARGET"
                                                Margin="5"
                                                SelectedIndex="0"
                                                Style="{StaticResource ListBoxStyle_Normal}">
                                                <ListBoxItem Content="未选择" Foreground="#FF6666" />
                                                <ListBoxItem Content="西西米托龙舌兰" />
                                                <ListBoxItem Content="红宝石项链" />
                                                <ListBoxItem Content="不记名债券" />
                                                <ListBoxItem Content="粉钻" />
                                                <ListBoxItem Content="玛德拉索文件" />
                                                <ListBoxItem Content="猎豹雕像" />
                                            </ListBox>
                                        </Expander>

                                        <Expander
                                            x:Name="Expander_H4LOOT"
                                            Margin="5"
                                            IsExpanded="False">
                                            <Expander.Header>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="次要目标 " />
                                                    <TextBlock
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Style="{StaticResource TextBlockStyle_IconFontBase}"
                                                        Text="&#xe7f2;">
                                                        <TextBlock.ToolTip>
                                                            <Image Source="/Assets/Images/Tips/PericoHeist02.png" />
                                                        </TextBlock.ToolTip>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Expander.Header>

                                            <StackPanel Margin="5" Orientation="Vertical">
                                                <CheckBox
                                                    x:Name="CheckBox_H4LOOT_Random"
                                                    Margin="5"
                                                    Content="随机次要目标" />
                                                <ListBox
                                                    x:Name="ListBoxItem_H4LOOT"
                                                    Margin="5"
                                                    SelectedIndex="0"
                                                    Style="{StaticResource ListBoxStyle_Normal}">
                                                    <ListBoxItem Content="未选择" Foreground="#FF6666" />
                                                    <ListBoxItem Content="已发现/侦察 现金（室内/室外）" />
                                                    <ListBoxItem Content="已发现/侦察 大麻（室内/室外）" />
                                                    <ListBoxItem Content="已发现/侦察 可可（室内/室外）" />
                                                    <ListBoxItem Content="已发现/侦察 黄金（室内/室外）" />
                                                </ListBox>
                                                <ListBox
                                                    x:Name="ListBoxItem_H4LOOT_PAINT"
                                                    Margin="5"
                                                    SelectedIndex="0"
                                                    Style="{StaticResource ListBoxStyle_Normal}">
                                                    <ListBoxItem Content="未选择" Foreground="#FF6666" />
                                                    <ListBoxItem Content="已发现/侦察 画作（室内/室外）" />
                                                </ListBox>
                                            </StackPanel>
                                        </Expander>

                                        <Expander
                                            Margin="5"
                                            Header="接近载具"
                                            IsExpanded="False">
                                            <ListBox
                                                x:Name="ListBoxItem_H4_MISSIONS"
                                                Margin="5"
                                                SelectedIndex="0"
                                                Style="{StaticResource ListBoxStyle_Normal}">
                                                <ListBoxItem Content="未选择" Foreground="#FF6666" />
                                                <ListBoxItem Content="潜水艇：虎鲸" />
                                                <ListBoxItem Content="飞机：阿尔科诺斯特" />
                                                <ListBoxItem Content="飞机：梅杜莎" />
                                                <ListBoxItem Content="直升机：隐形歼灭者" />
                                                <ListBoxItem Content="船只：巡逻艇" />
                                                <ListBoxItem Content="船只：长鳍" />
                                                <ListBoxItem Content="全部载具可用" />
                                            </ListBox>
                                        </Expander>

                                        <Expander
                                            Margin="5"
                                            Header="武器装备"
                                            IsExpanded="False">
                                            <ListBox
                                                x:Name="ListBoxItem_H4CNF_WEAPONS"
                                                Margin="5"
                                                SelectedIndex="0"
                                                Style="{StaticResource ListBoxStyle_Normal}">
                                                <ListBoxItem Content="未选择" Foreground="#FF6666" />
                                                <ListBoxItem Content="侵略者（连发散弹，连发手枪，手雷，砍刀）" />
                                                <ListBoxItem Content="阴谋者（军用步枪，单发手枪，粘弹，指虎）" />
                                                <ListBoxItem Content="神枪手（轻狙，连发手枪，燃烧瓶，小刀）" />
                                                <ListBoxItem Content="破坏者（MK2冲锋枪，单发手枪，土质炸弹，小刀）" />
                                                <ListBoxItem Content="神射手（MK2突击步枪，单发手枪，土质炸弹，砍刀）" />
                                            </ListBox>
                                        </Expander>

                                        <Expander
                                            Margin="5"
                                            Header="干扰"
                                            IsExpanded="False">
                                            <Grid Margin="5">
                                                <Border Style="{StaticResource BorderStyle_DropShadowEffect}" />
                                                <StackPanel>
                                                    <CheckBox
                                                        x:Name="CheckBox_H4CNF_WEP_DISRP"
                                                        Margin="5"
                                                        Content="武器" />
                                                    <CheckBox
                                                        x:Name="CheckBox_H4CNF_ARM_DISRP"
                                                        Margin="5"
                                                        Content="防弹衣" />
                                                    <CheckBox
                                                        x:Name="CheckBox_H4CNF_HEL_DISRP"
                                                        Margin="5"
                                                        Content="空中支援" />
                                                </StackPanel>
                                            </Grid>
                                        </Expander>

                                        <Expander
                                            Margin="5"
                                            Header="其他"
                                            IsExpanded="False">
                                            <Grid Margin="5">
                                                <Border Style="{StaticResource BorderStyle_DropShadowEffect}" />
                                                <StackPanel>
                                                    <CheckBox
                                                        x:Name="CheckBox_H4CNF_GRAPPEL"
                                                        Margin="5"
                                                        Content="解锁抓钩" />
                                                    <CheckBox
                                                        x:Name="CheckBox_H4CNF_UNIFORM"
                                                        Margin="5"
                                                        Content="解锁保安制服" />
                                                    <CheckBox
                                                        x:Name="CheckBox_H4CNF_BOLTCUT"
                                                        Margin="5"
                                                        Content="解锁螺栓切割器" />
                                                </StackPanel>
                                            </Grid>
                                        </Expander>

                                        <Expander
                                            Margin="5"
                                            Header="运货卡车位置"
                                            IsExpanded="False">
                                            <ListBox
                                                x:Name="ListBoxItem_H4CNF_TROJAN"
                                                Margin="5"
                                                SelectedIndex="0"
                                                Style="{StaticResource ListBoxStyle_Normal}">
                                                <ListBoxItem Content="未选择" Foreground="#FF6666" />
                                                <ListBoxItem Content="机场" />
                                                <ListBoxItem Content="北船坞" />
                                                <ListBoxItem Content="主码头-东" />
                                                <ListBoxItem Content="主码头-西" />
                                                <ListBoxItem Content="混合粉" />
                                            </ListBox>
                                        </Expander>

                                        <CheckBox
                                            x:Name="CheckBox_H4_PLAYTHROUGH_STATUS"
                                            Margin="5"
                                            Content="任务通过状态（最后勾选我）" />
                                    </StackPanel>
                                </ScrollViewer>
                            </GroupBox>
                        </Grid>

                        <Grid Grid.Column="1" Margin="3,6,5,3">
                            <GroupBox Style="{StaticResource GroupBoxWebStyle}">
                                <GroupBox.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Orientation="Horizontal">
                                            <emoji:TextBlock
                                                Margin="0,0,5,0"
                                                VerticalAlignment="Center"
                                                FontSize="18"
                                                FontWeight="Bold"
                                                Foreground="White"
                                                Text="🍊" />
                                            <RadioButton
                                                x:Name="RadioButton_H4CNF_P2"
                                                VerticalAlignment="Center"
                                                VerticalContentAlignment="Center"
                                                Click="CheckBox_H4CNF_P2_Click"
                                                Content="高级"
                                                FontSize="14"
                                                FontWeight="Bold"
                                                Foreground="White" />
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox.Header>

                                <ScrollViewer Style="{StaticResource ScrollViewerStyle_VAHD}">
                                    <StackPanel Margin="3" Orientation="Vertical">
                                        <CheckBox
                                            x:Name="CheckBox_ResetEverything"
                                            Margin="5"
                                            Content="重置海岛面板" />
                                        <CheckBox
                                            x:Name="CheckBox_H4_COOLDOWN"
                                            Margin="5"
                                            Content="解除普通模式冷却时间" />
                                        <CheckBox
