<Application
    x:Class="GTA5OnlineTools.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="LoadWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/Styles/GlobalStyle.xaml" />
                <ResourceDictionary Source="Assets/Styles/ScrollViewerStyle.xaml" />

                <ResourceDictionary Source="Assets/Styles/TextBlockStyle.xaml" />
                <ResourceDictionary Source="Assets/Styles/TextBoxStyle.xaml" />
                <ResourceDictionary Source="Assets/Styles/LabelStyle.xaml" />
                <ResourceDictionary Source="Assets/Styles/BorderStyle.xaml" />

                <ResourceDictionary Source="Assets/Styles/ButtonStyle.xaml" />
                <ResourceDictionary Source="Assets/Styles/ToggleButtonStyle.xaml" />

                <ResourceDictionary Source="Assets/Styles/CheckBoxStyle.xaml" />
                <ResourceDictionary Source="Assets/Styles/RadioButtonStyle.xaml" />

                <ResourceDictionary Source="Assets/Styles/GroupBoxStyle.xaml" />
                <ResourceDictionary Source="Assets/Styles/ListBoxStyle.xaml" />

                <ResourceDictionary Source="Assets/Styles/TabControlStyle.xaml" />

                <ResourceDictionary Source="Assets/Styles/UserControlStyle.xaml" />
                <ResourceDictionary Source="Assets/Styles/WindowStyle.xaml" />
                <ResourceDictionary Source="Assets/Styles/PageStyle.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
